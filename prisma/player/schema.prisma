generator client {
  provider      = "prisma-client-js"
  output        = "./player"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("PLAYER_DB_URL")
}

model Player {
  playerId   Int    @id @default(autoincrement()) @map("player_id")
  playerName String @unique @map("player_name")
  speed      Int    @map("speed")
  goalRate   Int    @map("goal_rate")
  power      Int    @map("power")
  defense    Int    @map("defense")
  stamina    Int    @map("stamina")
  level      Int?   @map("level")
  grade      Int    @map("grade")

  @@map("Player")
}
